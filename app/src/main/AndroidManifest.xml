<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- The camera, our window into the world of physical keys. -->
    <uses-feature android:name="android.hardware.camera.any" />
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- The Watcher's voice, a notification. Required for Android 13+ -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    <!-- Permission to consult the master archives. -->
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <!-- Permission for the Poltergeist to manifest. -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Barcodencrypt"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Barcodencrypt">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- The Ritual Chamber for scanning. -->
        <activity
            android:name=".ui.ScannerActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Barcodencrypt" />

        <!-- The Alchemist's Workshop. -->
        <activity
            android:name=".ui.ComposeActivity"
            android:label="@string/compose_message"
            android:theme="@style/Theme.Barcodencrypt" />

        <!-- The Ghost's Trampoline. An invisible helper. -->
        <activity
            android:name=".ui.ScannerTrampolineActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <!-- The Archives. -->
        <activity
            android:name=".ui.ContactDetailActivity"
            android:label="@string/contact_details"
            android:theme="@style/Theme.Barcodencrypt" />


        <!-- The Watcher, forever vigilant. -->
        <service
            android:name=".services.MessageDetectionService"
            android:exported="false"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

        <!-- The Poltergeist's heart. -->
        <service
            android:name=".services.OverlayService"
            android:exported="false"/>

    </application>

</manifest>